<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    tools:context="com.example.shrutibidada.breakoutgame.MainActivity">


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/highscoreTxt"
        style="@style/Base.TextAppearance.AppCompat.Caption"

        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/high_score"
        android:textIsSelectable="false"
        android:textSize="@android:dimen/app_icon_size"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.525" />

    <ImageView
        android:id="@+id/breakout"
        android:layout_width="302dp"
        android:layout_height="140dp"

        android:layout_above="@+id/highscoreTxt"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/breakout"
        tools:layout_editor_absoluteY="64dp" />

    <ImageButton
        android:id="@+id/playBtn"
        android:layout_width="225dp"
        android:layout_height="88dp"
        android:layout_below="@+id/highscoreTxt"

        android:elevation="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highscoreTxt"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/button"
        tools:layout_editor_absoluteX="797dp" />


</android.support.constraint.ConstraintLayout>


